<h1>Stories</h1>
<div class = "col-md-8 offset 2">
    <table>
    <tr>
        <th> Title </th>
        <th> Author </th>
        <th> Genre </th>
        <th> Tag </th>
        <th> Link </th>
    </tr>
    <% @stories.each do |story| %>
        <tr>
            <td><%= story.title %></td>
            <td><%= story.firstname %> <% story.lastname %></td>
            <td><%= story.genre %></td>
            <td><%= raw story.tags.map(&:name).map { |t| link_to t, tag_path(t) }.join(', ') %></td>
            <td><%= link_to '<button type="button">Read Story</button>'.html_safe, story_path(story) %></td>
        </tr>
    <% end %>
    </table>
</div>